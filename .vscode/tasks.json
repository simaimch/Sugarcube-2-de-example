{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile HTML",
            "type": "shell",
            "command": "./compile.bat",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": [
                "TypeScript"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "./tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "panel": "dedicated",
            },
            "group": {
                "kind": "build"
            },
            "label": "TypeScript"
        },
    ]
}